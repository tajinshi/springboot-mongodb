<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.springtest.dao.CollStageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springboot.springtest.bean.CollStage">
        <id column="id" property="id" />
        <result column="stage_name" property="stageName" />
        <result column="min_days" property="minDays" />
        <result column="max_days" property="maxDays" />
        <result column="create_date" property="createDate" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="update_date" property="updateDate" />
        <result column="is_visit" property="isVisit" />
        <result column="keep_days" property="keepDays" />
    </resultMap>

    <select id="getStageById" resultMap="BaseResultMap">
        SELECT  * FROM  coll_stage WHERE id = #{id}
    </select>
</mapper>
